<div class="container">
  <div class="balance-card">
    <div class="card text-center">
      <div class="card-header">
        <h1>Wallet</h1>
      </div>
      <div class="card-body">
        <h5 class="card-title">Current Balance</h5>
        <p class="card-text">R$<%= @wallet.balance %></p>
      </div>
    </div>
    <div class="d-grid gap-2">
      <a href="/chips" class="btn btn-primary">Buy Chips</a>
      <%# <%= link_to '<button type="submit" class="btn btn-primary">Buy Chips</button>'.html_safe, chips_path %>
      <%# <button type="submit" class="btn btn-primary"><a href="/chips">Buy Chips</a></button> %>
    </div>
  </div>

  <form class="form" autocomplete="off">
    <div class="card text-center">
      <div class="card-header">
        <h1>Withdraw</h1>
      </div>
    </div>

    <fieldset>
      <div class="card-holder">
        <div class="mb-3">
          <label class="form-label">Account Name</label>
          <input type="text" class="form-control">
        </div>
      </div>

    <fieldset>
      <div class="bank-name">
        <div class="mb-3">
          <label class="form-label">Bank Name</label>
          <div class="select">
            <select>
              <option></option>
              <option>Banco do Brasil</option>
              <option>Bradesco</option>
              <option>Santander</option>
              <option>Itaú</option>
              <option>Caixa Econômica Federal</option>
            </select>
          </div>
        </div>
      </div>

      <div class="account-type">
        <div class="mb-3">
          <label class="form-label">Account Type</label>
          <div class="select">
            <select>
              <option></option>
              <option>Corrente</option>
              <option>Poupança</option>
            </select>
          </div>
        </div>
      </div>

      <div class="bank-code">
        <div class="mb-3">
          <label class="form-label">Bank Code</label>
          <input type="num" class="form-control" maxlength="4" />
        </div>
      </div>
    </fieldset>

      <div class="account-number">
        <div class="mb-3">
          <label class="form-label">Account number</label>
          <input type="num" class="form-control" maxlength="8" />
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label">ID Number</label>
        <input type="num" class="form-control" maxlength="11" />
      </div>

      <div class="currency-wrap">
        <div class="mb-3">
          <label for="wallet_withdraw_amount">Enter Amount</label>
          <%# <input type="text" class="form-control" name="currency-field" id="currency-field" pattern="^\$\d{1,3}(,\d{3})*(\.\d+)?$"
                 value="" data-type="currency" placeholder="R$1,000.00"> %>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text">R$</span>
            </div>
              <%= number_field_tag 'wallet[withdraw_amount]', @wallet.withdraw_amount, class: "form-control", aria: {label: "Amount (to the nearest dollar)"} %>
            <div class="input-group-append">
              <span class="input-group-text">.00</span>
            </div>
          </div>
        </div>
      </div>
    </fieldset>
  </form>

  <%= simple_form_for [current_user, @wallet] do |f| %>
    <%= f.input :withdraw_amount %>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>

</div>
