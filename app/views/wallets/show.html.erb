<div class="pt-1">
  <div class="balance-card">
    <div class="card text-center">
      <div class="card-header">
        <h1>Wallet</h1>
      </div>
      <div class="card-body">
        <h5 class="text-center">Current Balance:</h5>
        <p class="card-text">R$ <%= @wallet.balance %></p>
      </div>
    </div>
    <div class="d-grid gap-2">
      <a href="/chips" class="btn btn-primary">Buy Chips</a>
      <%# <%= link_to '<button type="submit" class="btn btn-primary">Buy Chips</button>'.html_safe, chips_path %>
      <%# <button type="submit" class="btn btn-primary"><a href="/chips">Buy Chips</a></button> %>
    </div>
  </div>

  <%= simple_form_for [current_user, @wallet], html: { class: "withdraw-card" } do |f| %>
    <div class="card text-center">
      <div class="card-header">
        <h1>Withdraw</h1>
      </div>
    </div>
    <br>
    <div class="mb-3">
      <label class="wallet-form-label">Account Name</label>
      <input type="text" class="wallet-form-control">
    </div>

    <div class="mb-3">
      <label class="wallet-form-label">Bank Name</label>
      <div class="withdraw-select">
        <select>
          <option></option>
          <option>Banco do Brasil</option>
          <option>Bradesco</option>
          <option>Santander</option>
          <option>Itaú</option>
          <option>Caixa Econômica Federal</option>
        </select>
      </div>
    </div>

    <div class="mb-3">
      <label class="wallet-form-label">Account Type</label>
      <div class="withdraw-select">
        <select>
          <option></option>
          <option>Corrente</option>
          <option>Poupança</option>
        </select>
      </div>
    </div>

    <div class="mb-3">
      <label class="wallet-form-label">Bank Code</label>
      <input type="num" class="wallet-form-control" maxlength="4" />
    </div>

    <div class="mb-3">
      <label class="wallet-form-label">Account number</label>
      <input type="num" class="wallet-form-control" maxlength="8" />
    </div>

    <div class="mb-3">
      <label class="wallet-form-label">ID Number</label>
      <input type="num" class="wallet-form-control" maxlength="11" />
    </div>
    <div class="withdraw-label">
      <%= f.input :withdraw_amount, collection: 10..1000, :input_html => { :class => 'withdraw-form-control', autocomplete: 'off'}, :label => 'Withdraw amount' %>
      <%# <%= f.input :withdraw_amount, collection: [20, 50, 100, 200, 500, 1000, 1500, 2000] %>
      <div class="d-grid gap-2">
        <%= f.submit 'Withdraw', class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
