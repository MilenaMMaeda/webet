<div class="container">
  <h1>Dashboard</h1>
  <h5>Welcome back, <%= current_user.email %>!</h5>
  <%# add name a name column to users %>
</div>
<div class="container">
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

  <%# <div class="status-container"> %>
    <div class="row col-8 col-lg-12">
      <%# <div class="row row-cols-sm-1 row-cols-md-2 row-cols-xl-4"> %>
      <div class="col">
      <div class="card radius-10 border-start border-0 border-3 border-info">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div>
              <p class="mb-0 text-secondary">Balance</p>
              <h4 class="my-1 text-info">R$<%= current_user&.wallet&.balance %></h4>
              <%# <p class="mb-0 font-13">+2.5% from last week</p> %>
            </div>
            <div class="widgets-icons-2 rounded-circle bg-gradient-bloody text-white ms-auto"><i class="fa-sharp fa-solid fa-brazilian-real-sign"></i>
            </div>
          </div>
        </div>
      </div>
      </div>
      <div class="col">
      <div class="card radius-10 border-start border-0 border-3 border-danger">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div>
              <p class="mb-0 text-secondary">Loses</p>
              <h4 class="my-1 text-danger">- R$1000</h4>
              <%# <p class="mb-0 font-13">- 2.4% from last week</p> %>
            </div>
            <div class="widgets-icons-2 rounded-circle bg-gradient-scooter text-white ms-auto"><i class="fa-sharp fa-solid fa-chart-line-down"></i>
            </div>
          </div>
        </div>
      </div>
      </div>
    </div>
  </div>

  <%# <div class="float-right"> %>
  <div class="bets-container">
   <div class="row col-8 col-lg-12">
      <% @bets.each do |bet| %>
        <div class="card" style="width: 18rem;">
          <% if bet.photo.attached? %>
            <%= cl_image_tag(bet.photo.key, crop: :fill) %>
          <% else %>
            <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
          <% end %>
          <div class="bets-card-body">
            <h5 class="card-title"><p>Description:</p></h5>
            <p class="card-text"><%= bet.description %></p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><p>Amount: R$<%= bet.amount %></p></li>
            <li class="list-group-item"><p>Status: <%= bet.status %></p></li>
            <li class="list-group-item"><p>Max users: <%= bet.max_users %></p></li>
          </ul>
          <div class="bets-card-body">
            <%= link_to "View bet", bet_path(bet.id) %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

