<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="style.css">

  <title>WeBet</title>
</head>
<body>
  <div class="container">
      <%= image_tag("imagem_homepage2.jpg", alt: "amigos se divertindo", class:"banner-home") %>
      <span class="text first-text">We</span>
      <span class="text sec-text">Bet</span>
    </div>

    <script>
      const text = document.querySelector(".sec-text");

      const textLoad = () => {
          setTimeout(() => {
              text.textContent = "Bet";
          }, 0);
          setTimeout(() => {
              text.textContent = "Doubt";
          }, 1000);
          setTimeout(() => {
              text.textContent = "Think";
          }, 2000); //1s = 1000 milliseconds
      }

      textLoad();
      setInterval(textLoad, 3000);
  </script>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
